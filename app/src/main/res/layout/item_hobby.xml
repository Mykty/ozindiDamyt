<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    app:cardCornerRadius="15dp"
    app:cardElevation="10dp"
    app:cardPreventCornerOverlap="true">

    <RelativeLayout
        android:id="@+id/gradientLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/gradient8"
        android:minHeight="100dp"
        android:padding="10dp">

        <TextView
            android:id="@+id/hobbyTitle"
            style="@style/viewParent.headerText.HomeCardTitle"
            android:layout_width="match_parent"
            android:layout_toStartOf="@id/hobbyPhoto"
            android:singleLine="true"
            android:text="Шахмат" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/hobbyTitle"
            android:layout_marginTop="5dp"
            android:layout_toStartOf="@id/hobbyPhoto"
            android:orientation="vertical">


                <TextView
                    android:id="@+id/hobbyDesc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="Программалау тілін үйрену видео курстары"
                    android:maxLines="4"
                    android:textColor="@color/white"
                    android:textSize="16sp" />

<!--                <TextView-->
<!--                    android:id="@+id/hobbyLink"-->
<!--                    android:layout_width="match_parent"-->
<!--                    android:layout_height="match_parent"-->
<!--                    android:layout_gravity="center_vertical"-->
<!--                    android:singleLine="true"-->
<!--                    android:layout_marginTop="5dp"-->
<!--                    android:text="www.chess.com/ru"-->
<!--                    android:textColor="@color/white"-->
<!--                    android:visibility="invisible"-->
<!--                    android:textSize="14sp" />-->


        </LinearLayout>

        <ImageView
            android:id="@+id/hobbyPhoto"
            android:layout_width="100dp"
            android:layout_height="90dp"
            android:layout_alignParentEnd="true"
            android:adjustViewBounds="true"
            android:cropToPadding="true"
            android:layout_centerVertical="true"
            android:scaleType="fitXY"
            android:src="@drawable/photoshop_hobby" />
    </RelativeLayout>
</androidx.cardview.widget.CardView>

